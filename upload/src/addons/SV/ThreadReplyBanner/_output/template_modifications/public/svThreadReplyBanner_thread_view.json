{
    "template": "thread_view",
    "description": "Add Thread Reply Banner to quick reply",
    "execution_order": 1,
    "enabled": true,
    "action": "preg_replace",
    "find": "#([\\t ]*<xf:form action=\"{{ link\\('threads\\/add-reply'.*)(js-quickReply)(.*<\\/xf:form>)(.*?<\\/xf:if>)#si",
    "replace": "<div class=\"js-quickReply\">\n\t<xf:macro name=\"svThreadReplyBanner_macros::reply_banner_block_between\"\n\t\t\t  arg-preferred=\"{$thread}\" \n\t\t\t  arg-alternative=\"{$thread.Forum}\" \n\t\t\t  />\n$1$3\n</div>\n$4\n\n<xf:set var=\"$svShowBanner\" value=\"{{ 0 + $xf.options.svThreadReplyBanner_showBanner }}\" />\n<xf:if is=\"($svShowBanner === 2 || ($svShowBanner === 1 && !$thread.discussion_open)) AND !$thread.canReply()\">\n\t<xf:macro name=\"svThreadReplyBanner_macros::reply_banner_block_between\"\n\t\t\t  arg-preferred=\"{$thread}\" \n\t\t\t  arg-alternative=\"{$thread.Forum}\" \n\t\t\t  />\n</xf:if>"
}